import numpy as np                                                      #импортируем библиотеку

count = 0                                                               # Заводим счетчик попыток.
predict_num = np.random.randint(1,101)                                  # Присваиваем значение переменной.
number = int(input("Введите число от 1 до 100:"))                       # Предлагаем пользователю ввести число.
while number == predict_num:                                            # Запускаем цикл, пока не выполнится условие.
count = +1                                                              # Считаем число попыток.
    break                                                               # Останавливаем цикл, когда условие выпонено.
    print(f"Вы угадали число {number} за {count} попыток.")             # Сообщаем пользователю через сколько попыток он угадал число.

