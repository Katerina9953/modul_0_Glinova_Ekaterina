import numpy as np                                        #импортируем библиотеку

count = 0                                                 #Создаём счётчик поппыток.
number = np.random.randint(1, 101)                        #Загадываем число.
predict_num = int(input("Введите число от 1 до 100:"))    #Предлагаем ввести число.

while 1 < predict_num < 101:
    if number < predict_num:                              #Если введённое число меньше загаданного.
        print(f"Введённое число меньше {predict_num}")    #Сообщаем, что введённое число больше загаданного.
    elif number > predict_num:                            #Если введённое число больше загаданного.
        print(f"Введённое число больше {predict_num}")    #Сообщаем, что введённое число больше загаданного.
    else:
    print(f"Вы угадали число {number} за {count} попыток.")
    break                                                 #Выходим из цикла, если угадали число.
    count += 1                                            #Прибавляем попытку.

